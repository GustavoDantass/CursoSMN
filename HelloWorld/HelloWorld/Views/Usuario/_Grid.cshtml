@using System.Collections;
@model IEnumerable<HelloWorld.ViewModels.UsuarioViewModel>

@{ Layout = null; }

<table class="responsive-table bordered centered">
    <thead>
        <tr>
            <th>Email</th>
            <th>FG_Ativo</th>
            
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td></td>

                    <td>
                        <span class="flow-text">
                            <a class="btn-floating waves-effect waves-light green" title="Editar" onclick="abrirCadastroLancamento()"><i class="material-icons">mode_edit</i></a>
                            <a class="btn-floating waves-effect waves-light red" title="Excluir"><i class="material-icons">delete</i></a>
                        </span>
                    </td>
                </tr>

            }
        }
        else
        {
            <tr><td colspan="2">Nenhum registro encontrado....</td></tr>
        }
    </tbody>
</table>

<script>

     function buscarDados() {
        $.get('@Url.Action("BuscarDados", "Usuario")').done(function (data) {
            $("#divContainerUsuario").html(data);
        });
    }

</script>